/* pages/login/index.wxss */
page {
  padding: 0;
}

.login {
  margin: 20rpx 20rpx 0;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.login .form-field {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.login .label {
  padding-right: 20rpx;
  line-height: 80rpx;
  color: #5591AF;
}

.login input {
  flex: 1;
  height: 54rpx;
  border: none;
}

.login button {
  width: 100% !important;
  margin-top: 30rpx;
  color: #fff;
  background-color: #5591AF;
}
